                                    a(href='/').fs-6 About author
        if errors.length > 0
            - var msg = errors
        script(src="/vendor/eggy-js/js/eggy.js")
        script.
            // toast message
            let msgToast = '#{msg}';
            if(msgToast != ''){
                Eggy({
                    title: 'Something went wrong',
                    message:  msgToast,
                    type: 'warning',
                    duration: 5000,
                });
            }

            var showPasswordBtn = document.querySelector(".show-password");
            var showPasswordIcon = document.querySelector(".show-password i");
            var inputPassword = document.querySelector("#password");

            showPasswordBtn.onclick = function () {
                if (inputPassword.type === "password") {
                    inputPassword.type = "text";
                    showPasswordIcon.classList.remove("fa-eye-slash");
                    showPasswordIcon.classList.add("fa-eye");
                } else {
                    inputPassword.type = "password";
                    showPasswordIcon.classList.remove("fa-eye");
                    showPasswordIcon.classList.add("fa-eye-slash");
                }
            };

                                
