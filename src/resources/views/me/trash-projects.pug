extends ../layouts/common
block content   
    seaction#stored-projects.stored-projects
        header.stored-projects__header 
            nav.nav
                a(href="/").nav-link portfolio
            .stored-projects__header-title
                h1 
                    span deleted project
        main.stored-projects__main
            div 
                a(href="/me/stored/projects")
                    span Stored Projects
            table.table.stored-projects__table
                thead
                    tr
                        th(scope='col') #
                        th(scope='col') Name
                        th(scope='col') Banner
                        th(scope='col') Url
                        th(scope='col') Created At
                        th(scope='col') Action
                tbody
                    - var count = 0;
                    each project in projects
                        - count++;
                        tr
                            th(scope='row') #{count}
                            td=project.name
                            td 
                                img(src=project.banner, width=350, height=180)
                            td=project.url
                            td=moment(project.createdAt).format('DD-MM-YYYY')
                            td
                                a(href="/projects/" + project._id + "/edit").btn.btn-primary.me-2 Edit
                                a(href="#", data-bs-toggle="modal", data-bs-target="#delete-project-modal", data-bs-id=project._id).btn.btn-primary Delete
                            
                            // Delete hidden form
                            form(name="delete-project-form", method="POST")

                            // Confirm delete project
                            #delete-project-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='delete-project-label', aria-hidden='true')
                                .modal-dialog.modal-dialog-centered(style="max-width: 600px;")
                                    .modal-content.bg-dark(style='box-shadow: 0 .5rem 1rem rgba(250,250,250,0.15); font-family: "Source Serif Pro", serif;')
                                        .modal-header
                                            h5#delete-project-label.modal-title.text-uppercase Delete project
                                        .modal-body
                                            .is-devider-20                                  
                                            h4 Are you sure you want to delete this project?
                                            .is-devider-20 
                                        .modal-footer
                                            button.btn.btn-secondary(type='button', data-bs-dismiss='modal') Close
                                            button#btn-delete-project.btn.btn-danger(type='button') Delete
                    else
                        tr
                            td.text-center(colspan='6') Empty trash can?
                                a(href="/me/stored/projects") Stored Projects
    script(src="/js/project.js")        
