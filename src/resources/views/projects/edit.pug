extends ../layouts/common
block content 
    seaction#project-edit.project-edit
        header.project-edit__header 
            nav.nav
                a(href="/").nav-link portfolio
            .project-edit__header-title
                h1 edit project 
        main.project-edit__main
            form(action=`/projects/${project._id}?_method=PUT`, method="POST")
                .mb-3.row.align-items-center
                    label.col-sm-2.col-form-label(for='name') Name
                    .col-sm-10
                        input#name.form-control(type='text', name='name', placeholder='Enter project name' value=project.name required)
                .is-devider-20 
                .mb-3.row.align-items-center
                    label.col-sm-2.col-form-label(for='banner') Banner
                    .col-sm-10
                        input#banner.form-control(type='text', name='banner', placeholder='Enter project banner' value=project.banner required)
                .is-devider-20 
                .mb-3.row.align-items-center
                    label.col-sm-2.col-form-label(for='url') Url
                    .col-sm-10
                        input#url.form-control(type='text', name='url', placeholder='Enter project url' value=project.url required)
                .is-devider-20 
                .mb-3.row
                    label.col-sm-2.col-form-label
                    .col-sm-10
                        button.btn.btn-primary(type='submit') Save
